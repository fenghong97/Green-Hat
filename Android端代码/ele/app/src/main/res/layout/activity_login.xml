<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#0083ff">

        <ImageView
            android:id="@+id/back"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="登录"/>

        <TextView
            android:id="@+id/mimalogin"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="160dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="密码登录"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:inputType="phone"
            android:id="@+id/et_phonenum"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:hint="手机号"
            android:singleLine="false"
            android:background="@null"/>

        <Button
            android:id="@+id/btn_check"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:background="@drawable/ele_code_bg"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <EditText
            android:id="@+id/et_checkecode"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@null"
            android:hint="验证码" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="温馨提示：未注册饿了么账号的手机号，登录时自动注册，且代表您已同意《用户服务协议》"/>

        <Button
            android:id="@+id/btn_sure"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ele_login_bg"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_bottom" />

    </LinearLayout>
</LinearLayout>




